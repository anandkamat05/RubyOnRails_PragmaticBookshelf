<p id="notice"><%= notice %></p>

<h1>Listing Carts</h1>

<table>
  <thead>
    <tr>
      <th> Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @carts.each do |cart| %>
      <tr>
        <td> <%= cart.id %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= button_to 'Delete',cart,
                          :data => {:confirm => 'Are you sure?'},
                          :method => :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path %>

